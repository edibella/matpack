});

yargs.usage('Create a Matlab package or notebook.\nUsage: $0 [option] <name>')
  .example('$0 -p <name>', 'Create a matlab package')
  .example('$0 -n <name>', 'Create a matlab notebook')
  .alias('n', 'notebook')
  .alias('p', 'package')
  .describe('p', 'Create a package')
  .describe('n', 'Create a notebook'),
  argv = yargs.argv;

if(argv.p == null && argv.n == null) {
  yargs.showHelp();
};

